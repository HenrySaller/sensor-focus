<div class="{{#if bg}}section--{{bg}}{{else}}section{{/if}}" id="{{id}}">
  <div class="wrap">
    <div class="locations__container" data-carousel="container">

      {{#if title}}
      <div class="locations__content">
        <div class="card__title block-title--black block-title--center">{{title}}</div>
        <div class="card__item-text">{{{text}}}</div>
      </div>
      {{/if}}


      <div class="locations__image">
        <div class="locations__image-device">
          <img src="{{bg-img}}">
        </div>

        {{#items}}
        <div class="locations__image-screen" data-carousel="slide" data-slide="{{inc @index}}">
          <img src="{{bg-img}}">
        </div>
        {{/items}}

        <div class="locations__steps steps__container">
          {{#items}}
          <div class="steps__item" data-carousel="trigger" data-slide="{{inc @index}}"></div>
          {{/items}}
        </div>

      </div>

      <div class="locations__cta">

        {{#items}}
        <div class="locations__cta-button" data-carousel="trigger" data-slide="{{inc @index}}">
          <div class="locations__cta-text">{{cta}}</div>
        </div>
        {{/items}}

      </div>

      <div class="locations__description">

        {{#items}}
        <div class="locations__description-item card__item-text" data-carousel="text" data-slide="{{inc @index}}">{{{text}}}</div>
        {{/items}}

      </div>
    </div>
  </div>
</div>
