<footer class="{{#if bg}}section--{{bg}}{{else}}section{{/if}}" id="{{id}}">
  <div class="wrap">
    <div class="footer__container">

      <div class="footer__info">
        <a href="/" class="footer__logo"><img alt="Sensor Focus Logo" src="{{logo}}"></a>

        {{#socials}}
        <a href="{{url}}" class="footer__social"><img alt="{{alt}}" src="{{icon}}"></a>
        {{/socials}}

        <div class="footer__address">{{{address}}}</div>
        </aside>
      </div>

      {{#groups}}
      <div class="footer__group">
        <div class="footer__group-title">{{name}}</div>

        {{#links}}
        <a class="footer__group-link" href="{{url}}">{{name}}</a>
        {{/links}}

      </div>
      {{/groups}}

    </div>
  </div>
</footer>

<div class="copyright">{{copyright}}</div>
