<div class="section--white" id="{{id}}">
  <div class="wrap">
    <div class="video__container">

      <div class="video__content">
        <div class="video__title block-title--black">{{title}}</div>
        <div class="video__text">{{{text}}}</div>
        <div class="video__cta">
          <a class="button__standard" target="_blank" href="{{cta.url}}">{{cta.name}}</a>
        </div>
      </div>

      <div class="video__image">
        <div class="video__wrapper">
          <iframe class="video__player" width="100%" height="auto" src="{{video-url}}?vq=hd720&rel=0&showinfo=0" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>

    </div>
  </div>
</div>
